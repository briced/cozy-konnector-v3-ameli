{
  "name": "cozy-konnector-ameli",
  "version": "1.0.6",
  "description": "Cozy v3 Konnector for Ameli",
  "repository": {
    "type": "git",
    "url": "https://github.com/konnectors/cozy-konnector-ameli.git"
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-3.0",
  "main": "src/index.js",
  "dependencies": {
    "cozy-konnector-libs": "3.3.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "4.4.1",
    "git-directory-deploy": "1.5.1",
    "konitor": "0.4.0",
    "standard": "10.0.3",
    "webpack": "3.11.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "konitor testit .",
    "clean": "rm -f *_ameli.pdf",
    "dev": "cozy-konnector-dev src/index.js",
    "standalone": "npm run clean && cozy-konnector-standalone src/index.js",
    "standalone:record": "REPLAY=record cozy-konnector-standalone src/index.js",
    "standalone:replay": "REPLAY=replay cozy-konnector-standalone src/index.js",
    "build": "webpack",
    "lint": "standard --fix src/index.js",
    "deploy:travis": "git-directory-deploy --username <YOUR_GH_USERNAME> --email <YOUR_EMAIL> --directory build/ --repo=https://$GITHUB_TOKEN@github.com/konnectors/cozy-konnector-ameli.git",
    "deploy": "git-directory-deploy --directory build/ --branch build --repo=https://github.com/konnectors/cozy-konnector-ameli.git",
    "preversion": "npm run lint",
    "postversion": "npm run build && npm run deploy && git push && git push --tags && rm -rf build/"
  }
}
